<?xml version="1.0" encoding="utf-8"?>
<form>
	<fieldset name="default" label="COM_USERS_REGISTRATION_DEFAULT_LABEL">
        
        <field
			name="name"
			type="text"
			description="COM_USERS_REGISTER_NAME_DESC"
			filter="string"
			label="COM_USERS_REGISTER_NAME_LABEL"
			required="true"
			size="30"
		/>
        
        <field
			name="contact"
			type="text"
			description="COM_USERS_DESIRED_CONTACT"
			label="COM_USERS_REGISTER_CONTACT_LABEL"
			size="30"
		/>

		<field
			name="email1"
			type="email"
			description="COM_USERS_REGISTER_EMAIL1_DESC"
			field="id"
			filter="string"
			label="COM_USERS_REGISTER_EMAIL1_LABEL"
			message="COM_USERS_REGISTER_EMAIL1_MESSAGE"
			required="true"
			size="30"
			unique="true"
			validate="email"
		/>
        
        <field
			name="phone"
			type="text"
			description="COM_USERS_DESIRED_PHONE_NUMBER"
			label="COM_USERS_REGISTER_PHONE_NUMBER_LABEL"
			required="true"
			size="30"
		/>
        
        <field
			name="street"
			type="text"
			description="COM_USERS_DESIRED_STREET"
			label="COM_USERS_REGISTER_STREET_LABEL"
			required="true"
			size="30"
		/>

        <field
			name="city"
			type="text"
			description="COM_USERS_DESIRED_CITY"
			label="COM_USERS_REGISTER_CITY_LABEL"
			required="true"
			size="30"
		/>

		<field
			name="zipcode"
			type="text"
			description="COM_USERS_DESIRED_ZIPCODE"
			label="COM_USERS_REGISTER_ZIPCODE_LABEL"
			required="true"
			size="30"
		/>

		<field
			name="country"
			type="text"
			description="COM_USERS_DESIRED_COUNTRY"
			label="COM_USERS_REGISTER_COUNTRY_LABEL"
			required="true"
			size="30"
		/>
        
        <field
			name="street_delevery"
			type="text"
			description="COM_USERS_DESIRED_STREET"
			label="COM_USERS_REGISTER_STREET_LABEL"
			required="true"
			size="30"
		/>

        <field
			name="city_delevery"
			type="text"
			description="COM_USERS_DESIRED_CITY"
			label="COM_USERS_REGISTER_CITY_LABEL"
			required="true"
			size="30"
		/>

		<field
			name="zipcode_delevery"
			type="text"
			description="COM_USERS_DESIRED_ZIPCODE"
			label="COM_USERS_REGISTER_ZIPCODE_LABEL"
			required="true"
			size="30"
		/>

		<field
			name="country_delevery"
			type="text"
			description="COM_USERS_DESIRED_COUNTRY"
			label="COM_USERS_REGISTER_COUNTRY_LABEL"
			required="true"
			size="30"
		/>

        <field
			name="additonal"
			type="text"
			description="COM_USERS_DESIRED_ADDTIONAL_INFO"
			label="COM_USERS_REGISTER_ADDTIONAL_INFO_LABEL"
			required="true"
			size="30"
		/>

		<field
			name="captcha"
			type="captcha"
			label="COM_USERS_CAPTCHA_LABEL"
			description="COM_USERS_CAPTCHA_DESC"
			validate="captcha"
		/>
        
        <field
			name="password1" 
			type="password"
			autocomplete="off"
			class="validate-password"
			description="COM_USERS_DESIRED_PASSWORD"
			field="password1"
			filter="raw"
			label="COM_USERS_PROFILE_PASSWORD1_LABEL"
			size="30"
			validate="password"
			required="true"
		/>

		<field
			name="password2"
			type="password"
			autocomplete="off"
			class="validate-password"
			description="COM_USERS_PROFILE_PASSWORD2_DESC"
			field="password1"
			filter="raw"
			label="COM_USERS_PROFILE_PASSWORD2_LABEL"
			message="COM_USERS_PROFILE_PASSWORD1_MESSAGE"
			size="30"
			validate="equals"
			required="true"
		/>

	</fieldset>
</form>
